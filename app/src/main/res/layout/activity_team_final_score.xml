<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="24dp"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/game_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans_regular"
                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:text="@string/ss_string_130"
                        android:textColor="@color/white_two"
                        android:textSize="20sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="28dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/pine"
                    android:text="@string/ss_string_124"
                    android:fontFamily="@font/sans_regular" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="@color/pine"
                    android:text="@string/ss_string_125"
                    android:fontFamily="@font/sans_regular" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="@color/pine"
                    android:text="@string/ss_string_052"
                    android:fontFamily="@font/sans_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/darkishgreen_r12"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="14dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_red_team"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="7dp"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/crimson"
                                android:fontFamily="@font/sans_regular"
                                android:text="@string/ss_string_304" />
                            <ImageView
                                android:id="@+id/iv_red_win"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="8dp"
                                android:src="@drawable/win" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_red_to_par"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/crimson"
                            android:fontFamily="@font/sans_regular"
                            android:text="0" />

                        <TextView
                            android:id="@+id/tv_red_score"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/crimson"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/crimson"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-10dp"
                    android:layout_marginEnd="-10dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/row_final_score" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/darkishgreen_r12"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="14dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_blue_team"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="7dp"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/navy"
                                android:fontFamily="@font/sans_regular"
                                android:text="@string/ss_string_305" />
                            <ImageView
                                android:id="@+id/iv_blue_win"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="8dp"
                                android:src="@drawable/win" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_blue_to_par"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/navy"
                            android:fontFamily="@font/sans_regular"
                            android:text="0" />

                        <TextView
                            android:id="@+id/tv_blue_score"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/sans_regular"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/navy"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/navy"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-10dp"
                    android:layout_marginEnd="-10dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/row_final_score" />

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                app:cardBackgroundColor="@color/white_two"
                android:elevation="6dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="6dp"
                app:cardCornerRadius="25dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="@string/ss_string_133"
                    android:textColor="@color/apple"
                    android:fontFamily="@font/sans_regular"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/lightgreen_r12"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/ss_string_126"
                    android:textSize="16sp"
                    android:fontFamily="@font/sans_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/row_friend_final_prize" />

                </LinearLayout>
            </LinearLayout>





        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/iv_advertise"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/advertise_e"
        />
</RelativeLayout>