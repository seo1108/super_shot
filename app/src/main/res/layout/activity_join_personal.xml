<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_two"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_back" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black_two"
                    android:fontFamily="@font/sans_regular"
                    android:text="@string/ss_string_002"/>


            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="137dp"
                android:layout_marginTop="37dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile_regist" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="97dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:hint="@string/ss_string_003"
                    android:singleLine="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/light_grey_blue"
                    android:textColorHint="@color/light_grey_blue"
                    android:fontFamily="@font/sans_regular"
                    android:background="@drawable/underline_white_1" />

                <TextView
                    android:id="@+id/tv_id_check"
                    android:layout_width="97dp"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:hint="@string/ss_string_004"
                    android:textSize="14sp"
                    android:textColorHint="@color/apple"
                    android:fontFamily="@font/sans_regular"
                    android:background="@drawable/apple_r17" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_id_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="8dp"
                android:textColor="@color/faded_red"
                android:text="@string/ss_string_005"
                android:textSize="14sp"
                android:fontFamily="@font/sans_regular"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="23dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:clickable="true"
                android:focusable="true"
                android:hint="@string/ss_string_006"
                android:textColor="@color/light_grey_blue"
                android:textColorHint="@color/light_grey_blue"
                android:fontFamily="@font/sans_regular"
                android:background="@drawable/underline_white_1" />
            <TextView
                android:id="@+id/tv_name_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="8dp"
                android:textColor="@color/faded_red"
                android:text="@string/ss_string_007"
                android:textSize="14sp"
                android:fontFamily="@font/sans_regular"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="97dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:inputType="phone"
                    android:digits="0123456789+"
                    android:hint="@string/ss_string_008"
                    android:textColor="@color/light_grey_blue"
                    android:textColorHint="@color/light_grey_blue"
                    android:fontFamily="@font/sans_regular"
                    android:background="@drawable/underline_white_1" />

                <TextView
                    android:id="@+id/tv_phone_check"
                    android:layout_width="97dp"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:hint="@string/ss_string_009"
                    android:textSize="14sp"
                    android:textColorHint="@color/apple"
                    android:fontFamily="@font/sans_regular"
                    android:background="@drawable/apple_r17" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_verify"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="26dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:clickable="true"
                android:focusable="true"
                android:hint="@string/ss_string_010"
                android:textColor="@color/light_grey_blue"
                android:textColorHint="@color/light_grey_blue"
                android:fontFamily="@font/sans_regular"
                android:background="@drawable/underline_white_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/underline_white_1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:dropDownWidth="match_parent">
                </Spinner>

<!--                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:hint="@string/ss_string_011"
                    android:textColor="@color/light_grey_blue"
                    android:textColorHint="@color/light_grey_blue"
                    android:fontFamily="@font/sans_regular" />-->

                <!--<Spinner
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                     />-->

                <!--<ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/arrow_down" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/underline_white_1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:dropDownWidth="match_parent">
                </Spinner>

                <!--<TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="97dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:hint="@string/ss_string_012"
                    android:textColor="@color/light_grey_blue"
                    android:textColorHint="@color/light_grey_blue"
                    android:fontFamily="@font/sans_regular" />

                <ImageView
                    android:id="@+id/iv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/arrow_down" />-->
            </LinearLayout>

            <EditText
                android:id="@+id/et_recommend"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="26dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:clickable="true"
                android:focusable="true"
                android:hint="@string/ss_string_013"
                android:textColor="@color/light_grey_blue"
                android:textColorHint="@color/light_grey_blue"
                android:fontFamily="@font/sans_regular"
                android:background="@drawable/underline_white_1" />


            <LinearLayout
                android:id="@+id/ll_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/btn_check_off" />

                <TextView
                    android:id="@+id/tv_service_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="@string/ss_string_014"
                    android:textColor="@color/turtle_green"
                    android:fontFamily="@font/sans_regular" />

                <TextView
                    android:id="@+id/tv_service_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="@string/ss_string_015"
                    android:textColor="@color/black_two"
                    android:background="@drawable/underline_blacktwo_1"
                    android:fontFamily="@font/sans_regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_private"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_private"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/btn_check_off" />

                <TextView
                    android:id="@+id/tv_private_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="@string/ss_string_014"
                    android:textColor="@color/turtle_green"
                    android:fontFamily="@font/sans_regular" />

                <TextView
                    android:id="@+id/tv_private_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="@string/ss_string_016"
                    android:textColor="@color/black_two"
                    android:background="@drawable/underline_blacktwo_1"
                    android:fontFamily="@font/sans_regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/btn_check_off" />

                <TextView
                    android:id="@+id/tv_location_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="@string/ss_string_014"
                    android:textColor="@color/turtle_green"
                    android:fontFamily="@font/sans_regular" />

                <TextView
                    android:id="@+id/tv_location_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="@string/ss_string_143"
                    android:textColor="@color/black_two"
                    android:background="@drawable/underline_blacktwo_1"
                    android:fontFamily="@font/sans_regular" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                app:cardBackgroundColor="@color/apple"
                android:elevation="6dp"
                app:cardElevation="6dp"
                app:cardMaxElevation="6dp"
                app:cardCornerRadius="25dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="@string/ss_string_017"
                    android:textColor="@color/white_two"
                    android:fontFamily="@font/sans_regular"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
