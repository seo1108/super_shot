<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_of_row"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="19dp"
    android:layout_marginEnd="21dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:paddingTop="6dp"
    android:elevation="6dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="6dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@drawable/map_pin" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_cc_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="7dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/apple"
                        android:fontFamily="@font/sans_regular"
                        android:text="마에스트로CC" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_rounding_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="3dp"
                    android:paddingLeft="7dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/light_grey_blue"
                    android:fontFamily="@font/sans_regular"
                    android:text="2020-03-20 (금)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_game_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@color/melon"
                    android:fontFamily="@font/roboto_regular"
                    android:text="스킨스" />

                <TextView
                    android:id="@+id/tv_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sans_regular"
                    android:gravity="right"
                    android:paddingLeft="7dp"
                    android:text="+18,000"
                    android:textColor="@color/apple"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>