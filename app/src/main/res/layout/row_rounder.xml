<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box_of_row"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="19dp"
    android:layout_marginEnd="21dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:paddingTop="6dp"
    android:elevation="6dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="6dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@drawable/circle_profile"
            app:civ_border_color="@color/sunflower_yellow"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_friend_score"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="7dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/sans_regular"
                        android:text="캐빈전" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="4dp"
                        android:src="@drawable/ama_m" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_friend_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="3dp"
                    android:paddingLeft="7dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/light_grey_blue"
                    android:fontFamily="@font/sans_regular"
                    android:text="@string/ss_string_300" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_friend_score_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/apple"
                    android:fontFamily="@font/roboto_regular"
                    android:text="73" />

                <TextView
                    android:id="@+id/tv_friend_score_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sans_regular"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:text="@string/ss_string_301"
                    android:textColor="@color/light_blue_grey"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:src="@drawable/ama_m" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/apple"
                android:text="25" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>